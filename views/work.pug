extends layout

block content
  h1= title
  .whole
    .left
      .period
        label.choosePeriod CHOOSE PERIOD
        .forDateChoise
          .divStart
            label.date start date
            br
            input.timeStamp#timeStampS(type='date' value = '2018-07-31')
          .divFinish 
            label.date finish date
            br
            input.timeStamp#timeStampF(type='date' value = '2018-08-01')
        br
      .dinamic
        div#periodSet
        .divSendReq
          button#sendReq REQUEST
      br
      .dataFromDB  
        table#dataFromDB 
          tbody
    .right
      .guide 
        p GUIDE
          ol 
            li choose period by set start and finish dates
            br
            li set interval of display data from DB
            br
            li push "REQUEST" button for get data from DB
      .canv
        canvas#chartFromDB
      .typeOfChart
          button#pie(value = 'pie')
          button#bar(value = 'bar')
          button#line(value = 'line')

  link(rel='stylesheet', href='/css/workStyle.css')
  script(src='/js/work.js')