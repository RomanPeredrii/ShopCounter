extends layout

block content
  link(rel='stylesheet', href='/css/adminStyle.css')
  h1= title
  .whole
    .forOptions
      .forAdminGeneralOptions
        label Host:
        input.options#optionsHost(type='text', value='localhost', title='host')
        label Port:
        input.options#optionsPort(pattern = '^[ 0-9]+$', value = '3050', title='port')
        label Path:
        input.options#optionsPath(type='text' value = 'D:/JS/vvv/COUNTER.FDB', title='database')
        label Page Size:
        input.options#optionsPageSize(type='text', value = '4096', title='pageSize' )
      .forAdminOptions
        label User:
        input.options#optionsUser(type='text', value = 'SYSDBA', title='user')
        label Password:
        input.options#optionsPassword(type='text', value = 'a2vvczib', title='password')
        label Role:
        input.options#optionsRole(type='text', value = 'ADMIN', title='role')
      button#connect CONNECT
    .view
      .viewDb
        table#compositionDB
          tbody 
      .viewHead
        table#compositionHeadTable 
          tbody
      .viewTable
        table#compositionTable 
          tbody
      .dSlider
    .userData
      .forNewUserGeneralOptions
        label Host:
        input.options#optionsHostNewUser(type='text', value = '', title='host')
        label Port:
        input.options#optionsPortNewUser(pattern = "^[ 0-9]+$", value = '', title='port')
        label Path:
        input.options#optionsPathNewUser(type='text', value = '', title='database')
        label Page Size:
        input.options#optionsPageSizeNewUser(type='text', value = '', title='pageSize')
      .forNewUserOptions
        label User:
        input.options#optionsUserNewUser(type='text', value = '', title='username')
        label Password:
        input.options#optionsPasswordNewUser(type='text', value = '', title='password')
        label Role:
        input.options#optionsRoleNewUser(type='text', value = '', title='role')
      .forPoint
        label Products:
        input#productsUserData(type='text', value = '', title='products')
        label Department:
        input#departmentUserData(type = 'text', value = '', title='department')
        label Counters:
        input#countersUserData(type = 'text', value = '', title='counters')
      button#addUser ADDUSER
      .drList
  .compositionTableMenu
      label from:
      input#brandUserDataZZZ(type='date', value = '')
      label to:
      input#addressUserDataZZZ(type = 'date', value = '') 
      //- input#quantityOfStringRange(type = 'range')
      input#quantityOfStringRangeNumber(type= 'number')
      input#listForFilter(type="text")
  
  script(src="/js/doubleslider.js")
  script(src='/js/admin.js')
  script(src="/js/droplist.js")
  script(src="/js/dropListWithCheck.js")